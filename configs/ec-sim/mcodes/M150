#!/bin/sh

# M150 sets Period and Amplitude paramters for HSSC component 
# M151 sets the Interval parameter and turns HSSC on
# M152 turns off HSSC


period=$1
amplitude=$2

MCMD=$(readlink -nf $0) ;# canonical file name
MNAME=$(basename $MCMD)

echo
echo "Example for User M code invocation:"
echo "M code File: $MCMD"
echo "$MNAME P$period Q$amplitude"
halcmd setp hssc.0.duration $period
halcmd setp hssc.0.amplitude $amplitude


# exit 0 for success
exit 0 ;
